{
	"analysis": {
		"analyzer": {
			"index_ngram": {
				"char_filter": [
					"punctuationgreedy",
					"remove_ws_hnr_suffix"
				],
				"tokenizer": "keyword",
				"filter": [
					"preserving_word_delimiter",
					"lowercase",
					"german_normalization",
					"arabic_normalization",
					"scandinavian_normalization",
					"serbian_normalization",
					"asciifolding",
					"unique",
					"autocomplete_filter"
				]
			},
			"search_ngram": {
				"char_filter": [
					"punctuationgreedy"
				],
				"tokenizer": "standard",
				"filter": [
					"lowercase",
					"german_normalization",
					"arabic_normalization",
					"scandinavian_normalization",
					"serbian_normalization",
					"asciifolding"
				]
			},
			"index_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"arabic_normalization",
					"scandinavian_normalization",
					"serbian_normalization",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"search_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"arabic_normalization",
					"scandinavian_normalization",
					"serbian_normalization",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"index_housenumber": {
				"char_filter": [
					"punctuationgreedy",
					"remove_ws_hnr_suffix"
				],
				"filter": [
					"lowercase",
					"preserving_word_delimiter"],
				"tokenizer": "standard"
			}
		},
		"char_filter": {
			"punctuationgreedy": {
				"type": "pattern_replace",
				"pattern": "[\\.,']",
				"replacement": " "
			},
			"remove_ws_hnr_suffix": {
				"type": "pattern_replace",
				"pattern": "(\\d+)\\s(?=\\p{L}\\b)",
				"replacement": "$1"
			}
		},
		"filter": {
			"photonlength": {
				"min": "2",
				"type": "length"
			},
			"preserving_word_delimiter": {
				"type": "word_delimiter",
				"catenate_all": true
			},
			"autocomplete_filter": {
				"type": "edge_ngram",
				"min_gram": "1",
				"max_gram": "100",
				"token_chars": [
					"letter",
					"digit",
					"punctuation"
				]
			}
		}
	}
}
